pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/cemaltoptas/jenkins_test.git'
            }
        }
        stage('Build & Test') {
            steps {
                sh 'mvn clean test' // Assuming nohup is not needed
            }
            post {
                success {
                    sh 'mvn net.masterthought:maven-cucumber-reporting:generate'
                }
            }
        }
    }
}