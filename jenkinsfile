pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/cemaltoptas/jenkins_test.git'
            }
        }
        stage('Build & Test') { // Combined stage for efficiency
            steps {
                sh 'mvn clean test' // Run clean and test together
            }
            post { // Run cucumber reporting after tests
                success {
                    sh 'mvn net.masterthought:maven-cucumber-reporting:generate'
                }
            }
        }
    }
}