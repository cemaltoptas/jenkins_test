pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/cemaltoptas/jenkins_test.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Generate Cucumber Reports') {
            steps {
                sh 'mvn net.masterthought:maven-cucumber-reporting:generate'
            }
        }
    }
}