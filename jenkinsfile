pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                bat 'git clone https://github.com/cemaltoptas/jenkins_test.git .' // Windows Git command
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean package' // Assuming Maven (adjust for your build tool)
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test' // Assuming Maven (adjust for your build tool)
            }
        }
    }
}